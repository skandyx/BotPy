# ===============================================================
#          BOTPY - Fichier de Configuration Principal
# ===============================================================
# Copiez ce fichier en .env et remplissez les valeurs.
# NE PARTAGEZ JAMAIS VOTRE FICHIER .ENV !

# --- Configuration du Serveur ---
# Le port sur lequel le serveur backend va tourner.
PORT=8080

# --- Sécurité ---
# Le mot de passe que vous utiliserez pour vous connecter au tableau de bord.
APP_PASSWORD=your_strong_password_here

# Une chaîne de caractères longue et aléatoire pour sécuriser les sessions.
# Vous pouvez générer une clé ici : https://www.lastpass.com/features/password-generator
JWT_SECRET=a_very_long_and_random_string_for_security

# --- Clés API Binance ---
# Vos clés API de votre compte Binance. Nécessaires pour les modes REAL.
# Laissez vide si vous n'utilisez que le mode VIRTUAL.
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# ===============================================================
#          Paramètres de Trading (Gestion des Risques)
# ===============================================================

# Le solde de départ pour votre compte virtuel.
INITIAL_VIRTUAL_BALANCE=10000

# Le nombre maximum de positions ouvertes en même temps.
MAX_OPEN_POSITIONS=5

# Le pourcentage du solde total à utiliser pour chaque nouvelle position.
POSITION_SIZE_PCT=2.0

# Le pourcentage de profit auquel un trade sera fermé.
TAKE_PROFIT_PCT=4.0

# Le pourcentage de perte auquel un trade sera coupé pour limiter les risques.
STOP_LOSS_PCT=2.0

# Activer/désactiver le Stop Loss Suiveur (true/false).
USE_TRAILING_STOP_LOSS=true

# Le pourcentage en dessous du prix le plus haut pour placer le Stop Loss Suiveur.
TRAILING_STOP_LOSS_PCT=1.5

# Pourcentage de "glissement" pour simuler les conditions du marché réel.
SLIPPAGE_PCT=0.05


# ===============================================================
#          Scanner de Marché & Filtres de Stratégie
# ===============================================================

# Le volume minimum en USD sur 24h pour qu'une paire soit scannée.
MIN_VOLUME_USD=400000000

# La volatilité minimale en % pour qu'un signal soit considéré.
MIN_VOLATILITY_PCT=0.5

# La fréquence de synchronisation avec l'API CoinGecko (en secondes).
COINGECKO_SYNC_SECONDS=900

# Une liste de paires à toujours ignorer, séparées par des virgules.
EXCLUDED_PAIRS="USDCUSDT,FDUSDUSDT"

# (true/false) Activer le filtre qui vérifie si le volume actuel est supérieur à sa moyenne.
USE_VOLUME_CONFIRMATION=true

# (true/false) Activer le filtre qui vérifie si la tendance 4h est aussi haussière.
USE_MULTI_TIMEFRAME_CONFIRMATION=true

# (true/false) Activer le filtre principal qui vérifie le régime de marché (SMA50/200).
USE_MARKET_REGIME_FILTER=true

# Le nombre d'heures pendant lesquelles une paire est ignorée après une perte.
LOSS_COOLDOWN_HOURS=4
